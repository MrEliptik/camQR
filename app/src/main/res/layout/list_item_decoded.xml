<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_margin="5dp"
        android:background="@drawable/card_solid"
        android:elevation="2dp"
        android:orientation="horizontal"

        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="5dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside" />

        <View
            android:id="@+id/color_bar_view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="#03A9F4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/history_list_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:textColor="#F1F0F0"
                android:textSize="20sp"
                android:text="TYPE" />

            <TextView
                android:id="@+id/history_list_value"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#BDBDBD"
                android:textSize="15sp"
                android:autoLink="all"
                android:text="https://developers.google.com/ml-kit/vision/barcode-scanning/android" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:layout_marginRight="10dp"
                android:background="#424242" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="bottom">

                <Button
                    android:id="@+id/copy_btn"
                    android:drawableTop="@drawable/copy_24"
                    android:text="Copy"
                    android:textColor="#03A9F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTint="#ffffff" />

                <Button
                    android:id="@+id/share_btn"
                    android:drawableTop="@drawable/share_24"
                    android:text="Share"
                    android:textColor="#03A9F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTint="#FFFFFF" />

                <Button
                    android:id="@+id/goto_btn"
                    android:drawableTop="@drawable/goto_24"
                    android:text="Browse"
                    android:textColor="#03A9F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:drawableTint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>